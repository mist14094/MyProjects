<UserControl x:Class="KTWPFAppBase.Controls.ctlWebCamList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="114" Width="374" Loaded="UserControl_Loaded">
    <Grid Width="371">
            <WrapPanel RenderTransformOrigin="0.5,0.5" Margin="0,34,0,34.5">
                <TextBlock Width="auto" Height="23" Text="WebCam Device" TextWrapping="Wrap" Margin="6,6,0,10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="tbkWebCamDiv" FontWeight="Bold" Foreground="#FF000000" FontSize="12"/>
				<ComboBox IsSynchronizedWithCurrentItem="True" Margin="15,0,0,10" Height="23" Width="232" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="cmbWebCamDiv" FontSize="12" Style="{DynamicResource ComboBoxStyle}" ></ComboBox>
            </WrapPanel>
         </Grid>
</UserControl>
