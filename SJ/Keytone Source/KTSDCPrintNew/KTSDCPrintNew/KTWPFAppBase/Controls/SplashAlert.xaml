<Window x:Class="KTWPFAppBase.Controls.SplashAlert"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="50" Width="270"  
    Background="{DynamicResource BackGround}" Loaded="SplashAlert_Load" WindowStyle="None" 
	ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen"  ShowInTaskbar="False">
    
    <Grid Height="47" Width="Auto" >
        <Border Height="47" Width="270" Margin="0,0,0,0" BorderThickness="1,1,1,1" CornerRadius="4,4,4,4" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="DarkBlue" >
            <Label Margin="0,0,0,0" Name="lblMessage" Foreground="Blue"   FontWeight="Bold"  FontSize="12" VerticalAlignment="Center" ></Label>
        </Border> 
    </Grid>
</Window>
