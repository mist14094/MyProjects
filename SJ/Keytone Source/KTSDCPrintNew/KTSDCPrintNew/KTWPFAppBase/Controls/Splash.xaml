    Title="SplashScreen" 
    Width="728" Height="413" WindowStyle="None" HorizontalAlignment="Stretch" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="SplashScreen_Loaded" ShowInTaskbar="False" Background="{x:Null}">

    <Grid x:Name="LayoutRoot">
       <Image x:Name="img" HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Height="Auto" Stretch="Fill" Margin="0,0,0,0"/>
    </Grid>

</Window>
